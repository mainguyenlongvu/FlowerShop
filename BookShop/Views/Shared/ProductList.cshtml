@model IEnumerable<BookShop.Data.Dtos.ProductDto>
@if (Model.Count() > 0)
{
    var delay = 0.1;
    @foreach (var item in Model)
    {
        <div class="col-xl-3 col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="@(delay + "s")">
            <div class="product-item">
                <div class="position-relative bg-light overflow-hidden mt-2">
                    <img class="img-fluid w-100" src="@item.image_url" alt="">
                </div>
                <div class="text-center p-4">
                    <a class="d-block h5 mb-2" href="@("/Product/Show?productId=" + item.product_id)">@item.product_name</a>
                    <span class="text-primary me-1">@Convert.ToDecimal(@item.price).ToString("#,##0") đồng</span>
                </div>
                <div class="d-flex border-top">
                    <small class="w-50 text-center border-end py-2">
                        <a class="text-body" href="@("/Product/Show?productId=" + item.product_id)"><i class="fa fa-eye text-primary me-2"></i>Xem sản phẩm</a>
                    </small>
                    <small class="w-50 text-center py-2">
                        @if(item.quantity > 0)
                        {
                            <a class="text-body" asp-route="addcart" asp-route-productid="@item.product_id"><i class="fa fa-shopping-bag text-primary me-2"></i>Thêm vào giỏ hàng</a>
                        }
                        else
                        {

                            <a class="text-body"><i class="fa fa-shopping-bag text-primary me-2"></i>Hết hàng</a>
                        }
                    </small>
                </div>
            </div>
        </div>
        delay += 0.1;
    }
}
else{
    <p>Không có sản phẩm nào</p>
}